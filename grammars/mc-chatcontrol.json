{
  "scopeName": "source.mc-chatcontrol",
  "name": "Chatcontrol Rule",
  "fileTypes": [
    "chat.txt",
    "commands.txt",
    "packets.txt",
    "rules.txt",
    "sign.txt"
  ],
  "firstLineMatch": "^#.*([ChatControl|Rule|File]).*([ChatControl|Rule|File]).*([ChatControl|Rule|File]).*",
  "patterns": [
    {
      "match": "^#.*$",
      "name": "comment.line.number-sign"
    },
    {
      "match": "^(match).(.*)",
      "captures": {
        "1": {
          "name": "entity.name.section"
        },
        "2": {
          "name": "string.regexp"
        }
      }
    },
    {
      "contentName": "string.unquoted",
      "begin": "^(then).(warn|kick)",
      "beginCaptures": {
        "1": {
          "name": "keyword.control"
        },
        "2": {
          "name": "entity.name.function"
        }
      },
      "end": "(\\r\\n|\\r|\\n)",
      "patterns": [
        {
          "match": "%player|%world",
          "name": "variable.language"
        },
        {
          "match": "\\|",
          "name": "invalid.illegal"
        },
        {
          "match": "&[0-9a-fklmnor]",
          "name": "markup.italic"
        },
        {
          "match": "&[^0-9a-fklmnor]",
          "name": "invalid.illegal"
        }
      ]
    },
    {
      "contentName": "string.unquoted",
      "begin": "^(then).(replace|rewrite)",
      "beginCaptures": {
        "1": {
          "name": "keyword.control"
        },
        "2": {
          "name": "entity.name.function"
        }
      },
      "end": "(\\r\\n|\\r|\\n)",
      "patterns": [
        {
          "match": "%player|%world",
          "name": "variable.language"
        },
        {
          "match": "\\|",
          "name": "keyword.operator"
        },
        {
          "match": "&[0-9a-fklmnor]",
          "name": "markup.italic"
        },
        {
          "match": "&[^0-9a-fklmnor]",
          "name": "invalid.illegal"
        }
      ]
    },
    {
      "contentName": "string.interpolated",
      "begin": "^(then).(console)",
      "beginCaptures": {
        "1": {
          "name": "keyword.control"
        },
        "2": {
          "name": "entity.name.function"
        }
      },
      "end": "(\\r\\n|\\r|\\n)",
      "patterns": [
        {
          "match": "%player|%world",
          "name": "variable.language"
        },
        {
          "match": "\\|",
          "name": "keyword.operator"
        },
        {
          "match": "&[0-9a-fklmnor]",
          "name": "markup.italic"
        },
        {
          "match": "&[^0-9a-fklmnor]",
          "name": "invalid.illegal"
        }
      ]
    },
    {
      "contentName": "string.unquoted",
      "begin": "^(then).(notify).([\\.a-zA-Z\\-]+)",
      "beginCaptures": {
        "1": {
          "name": "keyword.control"
        },
        "2": {
          "name": "entity.name.function"
        },
        "3": {
          "name": "string.interpolated"
        }
      },
      "end": "(\\r\\n|\\r|\\n)",
      "patterns": [
        {
          "match": "%player|%world",
          "name": "variable.language"
        },
        {
          "match": "\\|",
          "name": "invalid.illegal"
        },
        {
          "match": "&[0-9a-fklmnor]",
          "name": "markup.italic"
        },
        {
          "match": "&[^0-9a-fklmnor]",
          "name": "invalid.illegal"
        }
      ]
    },
    {
      "match": "^(then).(deny|log)\\s(.*)",
      "captures": {
        "1": {
          "name": "keyword.control"
        },
        "2": {
          "name": "entity.name.function"
        },
        "3": {
          "name": "invalid.illegal"
        }
      }
    },
    {
      "match": "^(then).(fine).([0-9]+)(.*)",
      "captures": {
        "1": {
          "name": "keyword.control"
        },
        "2": {
          "name": "entity.name.function"
        },
        "3": {
          "name": "constant.numeric"
        },
        "4": {
          "name": "invalid.illegal"
        }
      }
    },
    {
      "match": "^(id).(.*)",
      "captures": {
        "1": {
          "name": "storage.type"
        },
        "2": {
          "name": "entity.other.attribute-name"
        }
      }
    },
    {
      "match": "^(before).(strip).(.*)",
      "captures": {
        "1": {
          "name": "entity.name.section"
        },
        "2": {
          "name": "entity.name.function"
        },
        "3": {
          "name": "string.regexp"
        }
      }
    },
    {
      "contentName": "string.unquoted",
      "begin": "^(before).(replace).([^\\s])",
      "beginCaptures": {
        "1": {
          "name": "entity.name.section"
        },
        "2": {
          "name": "entity.name.function"
        },
        "3": {
          "name": "string.regexp"
        }
      },
      "end": "(\\r\\n|\\r|\\n)",
      "patterns": [
        {
          "match": "%player|%world",
          "name": "variable.language"
        },
        {
          "match": "\\|",
          "name": "invalid.illegal"
        },
        {
          "match": "&[0-9a-fklmnor]",
          "name": "markup.italic"
        },
        {
          "match": "&[^0-9a-fklmnor]",
          "name": "invalid.illegal"
        }
      ]
    },
    {
      "match": "^(ignore).(string).(.*)",
      "captures": {
        "1": {
          "name": "keyword.other"
        },
        "2": {
          "name": "constant.language"
        },
        "3": {
          "name": "string.regexp"
        }
      }
    },
    {
      "match": "^(ignore).(event).(chat|commands|signs)(.*)",
      "captures": {
        "1": {
          "name": "keyword.other"
        },
        "2": {
          "name": "constant.language"
        },
        "3": {
          "name": "variable.parameter"
        },
        "4": {
          "name": "invalid.illegal"
        }
      }
    },
    {
      "match": "^(ignore).(perm).([a-zA-Z\\.\\-]+)(.*)",
      "captures": {
        "1": {
          "name": "keyword.other"
        },
        "2": {
          "name": "constant.language"
        },
        "3": {
          "name": "string.interpolated"
        },
        "4": {
          "name": "invalid.illegal"
        }
      }
    },
    {
      "match": "^(ignore).(gamemode).(survival|creative|adventure|spectator|0|1|2|3)(.*)",
      "captures": {
        "1": {
          "name": "keyword.other"
        },
        "2": {
          "name": "constant.language"
        },
        "3": {
          "name": "string.interpolated"
        },
        "4": {
          "name": "invalid.illegal"
        }
      }
    },
    {
      "match": "^(handle as).([^\\s]+)(.*)",
      "captures": {
        "1": {
          "name": "entity.name.function"
        },
        "2": {
          "name": "variable.parameter"
        },
        "3": {
          "name": "invalid.illegal"
        }
      }
    },
    {
      "match": "^(?!match|id|ignore|before|then|handle as|#)(.*)",
      "name": "invalid.illegal"
    }
  ]
}
